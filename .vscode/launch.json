{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm debug tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test:debug",
                "--",
                "-t",
                "getFontUrls"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "acme pull",
            "program": "${workspaceFolder}/index.js",
            "skipFiles": ["<node_internals>/**"],
            "args": ["pull", "--config", "test/resources/settings.json"],
            "env": {
                "DEBUG": "acme:*"
            },
            "preLaunchTask": "clean"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "acme create",
            "program": "${workspaceFolder}/index.js",
            "skipFiles": ["<node_internals>/**"],
            "args": ["create"],
            "env": {
                "DEBUG": "acme:*"
            }
        }
    ]
}
